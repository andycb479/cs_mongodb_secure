<Window x:Class="LabCsMongoDB.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabCsMongoDB"
        mc:Ignorable="d"
        Title="Secure App" Height="450" Width="800">
     <Grid>
          <Grid.RowDefinitions>
               <RowDefinition></RowDefinition>
               <RowDefinition></RowDefinition>
               <RowDefinition></RowDefinition>
          </Grid.RowDefinitions>
          <DockPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" >
               <Button Height="50" Content="Fetch Users" FontSize="14" FontFamily="Consolas" Margin="5,0,5,0" Padding="10,1,10,1" Click="FetchDataHandler"/>
               <Button Height="50" Content="Add User" FontSize="14" FontFamily="Consolas" Margin="5,0,5,0" Padding="10,1,10,1" Click="AddTaskHandler"/>
          </DockPanel>
          <ListBox Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Margin="10,0,10,0"  Name="TaskList">
          </ListBox>
     </Grid>
</Window>
